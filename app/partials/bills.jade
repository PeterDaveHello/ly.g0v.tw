.bill
  h1(title="{{summary}}") {{summary}}

  .peek.clearfix
    .ui.vertical.menu.right.floated
      .item
        i.copy.icon
        | 提案編號 {{ bill_ref }}
      .item
        i.code.icon
        a(ng-href="http://api-beta.ly.g0v.tw/v0/collections/bills/{{bill_ref}}",target="_blank") JSON
      .item(ng-show="doc.pdf")
        i.file.icon
        a(ng-href="{{doc.pdf}}",target="_blank") PDF
      .item(ng-show="doc.doc")
        i.file.icon
        a(ng-href="{{doc.doc}}",target="_blank") Word

  .role.committee(ng-show="committee")
      ul
          li(ng-repeat="c in committee")
              span
                  img.avatar.medium(ng-src="http://avatars.io/50a65bb26e293122b0000073/committee-{{c.abbr}}?size=medium",ng-alt="{{c.name}}",ng-class="{{c.abbr}}")
                  span.name {{c.name}}委員會
  .role.sponsors(ng-show="sponsors")
      h2 提案人
      ul
          li(ng-repeat="e in sponsors")
              span
                  img.avatar(ng-src="http://avatars.io/50a65bb26e293122b0000073/{{e.avatar}}?size=medium",ng-alt="{{e.name}}",ng-class="e.party")
                  span.name {{e.name}}
  .description
      p {{abstract}}

  .role.cosponsors(ng-show="cosponsors")
      h2 連署人
      ul
          li(ng-repeat="e in cosponsors")
              span
                  img.avatar(ng-src="http://avatars.io/50a65bb26e293122b0000073/{{e.avatar}}?size=small",ng-alt="{{e.name}}",ng-class="e.party")
                  span.name {{e.name}}

  .clearfix
  .history
  .clearfix
  .related(ng-show="related")
      ul
          li(ng-repeat="r in related")
              span
                  img.avatar(ng-show="r.avatar",ng-src="http://avatars.io/50a65bb26e293122b0000073/{{r.avatar}}?size=small",ng-alt="{{r.name}}",ng-class="r.party")
                  span.summary {{r.summary}}

  .clearfix
  .content.default(ng-repeat="(i, d) in diff")
      h2 {{d.name}}
      table.diff.legend
          th
              td.delete
                  {{d.diffbase}}
              td vs
              td.version(ng-repeat="v in d.versions",ng-class="{insert: v == d.diffnew}",ng-bind="v",ng-click="setDiff(d, v)")
      ul.lawdiff
          li(ng-repeat="e in d.diffcontent")
              .diff(ng-bind-html-unsafe="e.diff")
              .comment(ng-bind-html-unsafe="e.comment")
