.ly-bill

  .ui.menu.date .item
    padding-top: 0.7rem
    padding-bottom: 0.7rem

  .ui.menu
    margin: 0

  .selected:after
    content: ""
    position: absolute
    top: -3px
    left: -3px
    height: 100%
    width: 100%
    border: 2px orange solid
    z-index: 10
    background-color: rgba(orange,0)
    border-radius(0.5rem)

  .committee
    .ui.grid
      margin: 0
    .ui.stackable.grid .row>.column
      margin: 0!important
      padding: 0!important
    .row,
    .wide.column,
    .column
      padding: 0
      margin: 0
    .category.ui.button
      width: 100%
      padding: 0.7rem 0
    .ui.toggle.checkbox .box, .ui.toggle.checkbox label,
      margin-left: -1rem
      &.disabled
        opacity: 0.5
      &.disabled:after
        background-color: #ccc
    .ui.checkbox .box, .ui.checkbox label
      &.disabled
        cursor: default

  .date
    .today
      padding-right: 2rem
    .ui.menu .item>.label
      background: none
      color: #666
    .ui.pagination.menu .active.item
      background-color: rgba(green,0.2)


# copied from sass/index.sass
.bill.list,
.sitting.list
  padding: 2rem 2rem 2rem 2rem

  .column
    margin-bottom: 1rem
  .ui.ribbon.label
    margin-top: -2rem
  .summary
    margin: 1.5rem 0 2rem 0
    a
      text-decoration: underline
  .legislator.image
    background: none
    white-space: nowrap
    height: 1.5rem
    overflow: hidden
    img
      opacity: 0.7
      display: inline-block
      border: 1px #ccc solid
      height: 1rem
  .bill.ui.segment .ui.top.right.attached.label i.icon
    margin: 0 0 0 1rem
  .text.right
    float: right
  .ui.label.red a
    color: #fff
