.bill-index
  margin: 0 1rem
  padding: 1rem 0
  .ui.stackable.grid
    margin: 0
    .row
      position: relative
      margin: 0
      padding: 0
      background-color: rgba(#000,0.05)
      border-bottom: 1px #ccc dashed
      &:first-child .column:first-child
        @media only screen and (max-width:768px)
          padding: 1rem
      .column
        padding: 1rem
        &:first-child
          min-height: 10rem
          > div[legislator]
            position: absolute
            .image
              width: 100px
              .g0v-icon:after
                padding-left: .1em
                font-size: 1.8em
            .content
              padding-top: .5em
              text-align: center
            .infocard
              margin-top: 0
              left: -5%
            .avatar
              width: 100px
        @media only screen and (max-width:768px)
          padding: 1rem!important
          margin: 0!important
          &:first-child
            padding: 1rem 1rem 0 1rem!important
            min-height: 9rem
        .ui.pointing.label
          margin-left: 8rem
          font-size: 1.5rem
          background-color: #fff
          &:before
            background-color: #fff
        .label.detail
          margin: .25em
          font-size: 1.1em
        .label.passed
          background-color: #A1CF64
          color: #fff
        .label.scheduled
          background: #6ECFF5
          color: #fff
        .label.timing
          margin: .25em
          font-size: 1em
          background-color: #fff
